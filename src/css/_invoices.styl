.invoices__container {
    max-width: 900px;
    margin: 0 auto;
    border: 1px solid #e4e4e4;
    padding: 2rem;
    &--add {
        background: #fff;
        margin-bottom: 2rem;
        button {
            background: #58b957;
            border: 0;
            padding: 10px 30px;
            color: #fff;
            border-radius: 5px;
            margin: 2rem 0;
        }
    }
    &--list {
        text-align: center;
        .invoice__single {
            margin-bottom: 1.5rem;
            padding: 2rem;
            button {
                background: #D91E18;
                border: 0;
                padding: 10px 15px;
                color: #fff;
            }
            &--fields {
                display: grid;
                grid-template-columns: repeat(4, minmax(200px, 1fr));
                .invoice__single__item {
                    display: flex;
                    flex-direction: column;
                    .spanKey {
                        color: #333;
                        font-weight: bold;
                    }
                }
            }
        }
        .titles {
            border-radius: 5px;
            background: #ccc;
            padding: 10px;
        }
    }
}